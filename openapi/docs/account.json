{
  "openapi": "3.0.3",
  "info": {
    "title": "PAY.JP account API",
    "version": "1.0.0"
  },
  "paths": {
    "/accounts": {
      "get": {
        "summary": "アカウント情報を取得",
        "description": "あなたのアカウント情報を取得します。",
        "responses": {
          "200": {
            "description": "Accountオブジェクトの詳細情報",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/account"
                }
              }
            }
          },
          "4XX": {
            "description": "エラーレスポンス",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "./base.json#/components/schemas/error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "account": {
        "type": "object",
        "description": "Accountオブジェクト",
        "properties": {
          "object": {
            "type": "string",
            "description": "固定文字列",
            "enum": [
              "account"
            ]
          },
          "id": {
            "type": "string",
            "description": "acct_で始まる一意なオブジェクトを示す文字列",
            "example": "acct_8a27db83a7bf11a0c12b0c2833f"
          },
          "email": {
            "type": "string",
            "description": "メールアドレス",
            "example": "liveaccount@example.com"
          },
          "created": {
            "type": "integer",
            "format": "int64",
            "description": "このアカウント作成時のUTCタイムスタンプ"
          },
          "merchant": {
            "$ref": "#/components/schemas/merchant"
          },
          "team_id": {
            "type": "string",
            "nullable": true,
            "description": "このアカウントに紐付くチームID"
          }
        },
        "required": ["object", "id", "email", "created", "merchant"]
      },
      "merchant": {
        "type": "object",
        "description": "Merchantオブジェクト",
        "properties": {
          "object": {
            "type": "string",
            "description": "固定文字列",
            "enum": [
              "merchant"
            ]
          },
          "id": {
            "type": "string",
            "description": "acct_mch_で始まる一意なオブジェクトを示す文字列",
            "example": "acct_mch_21a96cb898ceb6db0932983"
          },
          "bank_enabled": {
            "type": "boolean",
            "description": "入金先銀行口座情報が設定済みかどうか"
          },
          "brands_accepted": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "Visa",
                "MasterCard",
                "JCB",
                "American Express",
                "Diners Club",
                "Discover"
              ]
            },
            "description": "本番環境で利用可能なカードブランドのリスト"
          },
          "currencies_supported": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["jpy"]
            },
            "description": "対応通貨のリスト",
            "example": ["jpy"]
          },
          "default_currency": {
            "type": "string",
            "description": "3文字のISOコード（現状 \"jpy\" のみサポート）",
            "enum": ["jpy"]
          },
          "details_submitted": {
            "type": "boolean",
            "description": "本番環境申請情報が提出済みかどうか"
          },
          "business_type": {
            "type": "string",
            "nullable": true,
            "description": "業務形態"
          },
          "country": {
            "type": "string",
            "description": "所在国",
            "example": "JP"
          },
          "charge_type": {
            "type": "array",
            "nullable": true,
            "items": {
              "type": "string"
            },
            "description": "支払い方法種別のリスト"
          },
          "product_name": {
            "type": "string",
            "nullable": true,
            "description": "販売商品名"
          },
          "product_type": {
            "type": "array", "nullable": true,
            "items": {
              "type": "string"
            },
            "description": "販売商品の種類リスト"
          },
          "livemode_enabled": {
            "type": "boolean",
            "description": "本番環境が有効かどうか"
          },
          "livemode_activated_at": {
            "type": "integer", "nullable": true,
            "format": "int64",
            "description": "本番環境が許可された日時のUTCタイムスタンプ"
          },
          "site_published": {
            "type": "boolean", "nullable": true,
            "description": "申請対象のサイトがオープン済みかどうか"
          },
          "created": {
            "type": "integer",
            "format": "int64",
            "description": "登録日時"
          }
        },
        "required": [
          "object",
          "id",
          "bank_enabled",
          "brands_accepted",
          "currencies_supported",
          "default_currency",
          "details_submitted",
          "country",
          "livemode_enabled",
          "created"
        ]
      }
    }
  }
}
